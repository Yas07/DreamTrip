<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    card_view:cardBackgroundColor="@color/myTransparent"
    card_view:cardElevation="0dp"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layoutPlanDayAndPoint"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/planTextPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="cursive"
            android:text="@string/plan"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/planLayoutDate"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/planDayWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="cursive"
            android:padding="5dp"
            android:text="Weekday"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/planDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:fontFamily="cursive"
            android:padding="5dp"
            android:text="date"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPlanPoint"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/note_blue_mdpi"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="2.21">



    <LinearLayout
        android:id="@+id/layoutPlanPointImgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.01"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <ImageButton
            android:id="@+id/imgIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/myTransparent" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/black_overlay"
            android:textStyle="bold" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutPlanPointDescription"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Activity Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Details"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>