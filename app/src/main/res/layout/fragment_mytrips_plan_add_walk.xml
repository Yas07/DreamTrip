<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myTransparent"
    tools:context="layout.FragmentPlan_walk">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_white_2x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnWalkCapitol"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@color/transparentWhite"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_capitol_black" />

            <ImageButton
                android:id="@+id/btnWalkCastle"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_castle_black_shape" />

            <ImageButton
                android:id="@+id/btnWalkCastle2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_castle" />

            <ImageButton
                android:id="@+id/btnWalkMosque"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_mosque" />

            <ImageButton
                android:id="@+id/btnWalkChurch"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_church" />

            <ImageButton
                android:id="@+id/btnWalkLiberty"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_usa" />

            <ImageButton
                android:id="@+id/btnWalkFrance"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_france" />

            <ImageButton
                android:id="@+id/btnWalkKiev"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_kiev" />

            <ImageButton
                android:id="@+id/btnWalkPyramid"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_pyramids" />

            <ImageButton
                android:id="@+id/btnWalkNefertiti"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_nefertiti" />

            <ImageButton
                android:id="@+id/btnWalkFountain"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_fountain" />

            <ImageButton
                android:id="@+id/btnWalkTemple"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/icontour_temple" />

            <ImageButton
                android:id="@+id/btnWalkOther"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWalk"
                app:srcCompat="@drawable/ic_location_on_black_24px" />

        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>
