<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentWinter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myTransparent"
    tools:context="layout.FragmentPlan_winter">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_white_2x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnWinterSnow"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="changeIconWinter"
                android:tag="iconwinter_snow"
                app:srcCompat="@drawable/iconwinter_snow" />

            <ImageButton
                android:id="@+id/btnWinterSanta"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWinter"
                android:tag="iconwinter_santa_claus"
                app:srcCompat="@drawable/iconwinter_santa_claus" />

            <ImageButton
                android:id="@+id/btnWinterTree"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWinter"
                android:tag="iconwinter_pine"
                app:srcCompat="@drawable/iconwinter_pine" />

            <ImageButton
                android:id="@+id/btnWinterSnowman"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWinter"
                android:tag="iconwinter_snowman"
                app:srcCompat="@drawable/iconwinter_snowman" />

            <ImageButton
                android:id="@+id/btnWinterSki2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWinter"
                android:tag="iconwinter_man_skiing"
                app:srcCompat="@drawable/iconwinter_man_skiing" />

            <ImageButton
                android:id="@+id/btnWinterSki3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWinter"
                android:tag="iconwinter_skiing_man"
                app:srcCompat="@drawable/iconwinter_skiing_man" />

            <ImageButton
                android:id="@+id/btnWinterSki"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWinter"
                android:tag="iconwinter_cross_country_skiing"
                app:srcCompat="@drawable/iconwinter_cross_country_skiing" />

            <ImageButton
                android:id="@+id/btnWinterBoard"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="changeIconWinter"
                android:tag="iconwinter_snowboarding"
                app:srcCompat="@drawable/iconwinter_snowboarding" />

            <ImageButton
                android:id="@+id/btnWinterSkate"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="changeIconWinter"
                android:tag="iconwinter_ice_skating"
                app:srcCompat="@drawable/iconwinter_ice_skating" />

            <ImageButton
                android:id="@+id/btnWinterSled"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWinter"
                android:tag="iconwinter_sledding"
                app:srcCompat="@drawable/iconwinter_sledding" />

            <ImageButton
                android:id="@+id/btnWinterOther"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:onClick="changeIconWinter"
                android:tag="ic_location_on_black_24px"
                app:srcCompat="@drawable/ic_location_on_black_24px" />

        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>
